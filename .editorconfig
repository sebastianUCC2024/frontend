# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
end_of_line = lf

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_style = space
indent_size = 2
